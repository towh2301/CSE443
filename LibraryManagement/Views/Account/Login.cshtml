@using LibraryManagement.ViewModels;
@model LoginViewModel

@{
    Layout = "_AccountLayout";
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account" ,new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <section class="container pt-5">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                         class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form>
                        <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
                            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-google"></i>
                            </button>

                            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-linkedin-in"></i>
                            </button>
                        </div>

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0">Or</p>
                        </div>

                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>

                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter password", @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        
                        

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-0">
                                @Html.LabelFor(m => m.RememberMe, new { @class = "control-label" })
                                @Html.CheckBoxFor(m => m.RememberMe, new { type = "checkbox", value = "", @class = "form-check-input me-2" })
                            </div>

                            <!-- Verify Email -->
                            <div class="float-end">
                                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
                                    Forgot password?
                                </a>
                            </div>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Login
                            </button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                Don't have an account? <a asp-controller="Account" asp-action="Register" class="link-danger">Register</a>
                            </p>
                        </div>
                        <div class="text-center">
                            <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
}
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}