@model LibraryManagement.ViewModels.ProfileViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Profile";
    
}
<section class="w-100">
<div class="container-fluid py-5 h-100 w-full">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-6 mb-4 mb-lg-0 w-75">
            <div class="card mb-3" style="border-radius: .5rem;">
                <div class="row g-0">
                    <div class="col-md-4 gradient-custom text-center text-white"
                         style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                        <img src="@Model.User?.Avatar"
                             alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                        <h5>@Model.User?.FullName</h5>
                        <i class="far fa-edit mb-5"></i>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body px-4">
                            <h6>Information</h6>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-6 mb-3">
                                    <h6>Email</h6>
                                    <p class="text-muted">@Model.User?.Email</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h6>Phone</h6>
                                    <p class="text-muted">@Model.User?.PhoneNumber</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <h6>Others</h6>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <div class="col-6 mb-3">
                                    <h6>Created At</h6>
                                    <p class="text-muted">@Model.User?.CreatedDate</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <h6>Description</h6>
                                    <p class="text-muted">@Model.User?.Description</p>
                                </div>
                            </div>
                            <h6>Loans</h6>
                            <hr class="mt-0 mb-4">
                            <div class="row pt-1">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Book</th>
                                        <th>Loan Date</th>
                                        <th>Due Date</th>
                                        <th>Status</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var loan in Model?.Loans!)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@loan.Book?.Title</td>
                                            <td>@loan.LoanDate.ToString("yyyy-MM-dd")</td>
                                            <td>@loan.DueDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                @switch (loan.Status)
                                                {
                                                    case 0: <span class="badge bg-primary">Active</span>; break;
                                                    case 1: <span class="badge bg-success">Returned</span>; break;
                                                    case 2: <span class="badge bg-danger">Overdue</span>; break;
                                                }
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>