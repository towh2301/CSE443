@{
    Layout = "_Layout";
}

<div class="row flex-row align-content-center my-5"> 
    @foreach (var book in ViewBag.Books)
    { 
            <div class="col-md-3 my-3"> 
                <div class="card h-100"> 
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Product Image"> 
                    <div class="card-body d-flex flex-column"> <!-- Add these classes -->
                        <div>
                            <h5 class="card-title">@book.Title</h5> 
                            <p class="card-text">@book.Description</p>
                            <p class="card-text">@book.Publisher</p> 
                            <p class="text-muted">@book.PublishedYear</p> 
                        </div>
                        <a href="#" class="btn btn-primary mt-auto">Loan now</a> <!-- Add mt-auto -->
                    </div> 
                </div> 
            </div> 
    } 
</div>