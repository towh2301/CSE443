@model Book 

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model.Title;
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 book-detail-container">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.Avatar" alt="Book Cover" class="img-fluid mb-3 book-cover">
                </div>
                <div class="col-md-8">
                    <h1 class="mb-3 book-title">@Model.Title</h1>
                    <div class="book-info">
                        <p><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Author:</strong> @Model.Author</p>
                        <p><strong>Publisher:</strong> @Model.Publisher</p>
                        <p><strong>Published Year:</strong> @Model.PublishedYear</p>
                        <p><strong>Genre:</strong> @Model.Category</p>
                    </div>
                    <a onclick="location.href='@Url.Action("ReadPdf", "Book", new { id = @Model.BookId })'" class="btn btn-primary mt-4">Read Now</a>
                    <!-- Optional: Link to Download PDF -->
                    <a class="btn btn-primary mt-4" asp-controller="Book" asp-action="Loan" asp-route-id="@Model.BookId">Loan Now</a>
                </div>
            </div>
        </div>
    </div>
</div>


